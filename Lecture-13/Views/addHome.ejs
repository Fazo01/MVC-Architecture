<%- include('partial/head')%>
  </head>
  <body>
    <%- include('partial/nav')%>
    <main class="container mx-auto mt-8 p-8 bg-white rounded-lg shadow-md">
      <h1 class="text-3xl font-bold mb-6 text-center text-gray-800">
        Register Your Home on AirBnB
      </h1>
      <form action="/host/add-home" method="POST" class=" max-w-md mx-auto">
        <input
          type="text"
          name="houseName"
          placeholder="Enter your House Name"
          required
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
        />
        <input
          type="text"
          name="price_per_night"
          placeholder="Enter your price per night"
          required
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
        />
        <input
          type="text"
          name="location"
          placeholder="Enter your location"
          required
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
        />
        <input
          type="text"
          name="pic"
          placeholder="Enter photo"
          required
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
        />
        <input
          type="text"
          name="rating"
          placeholder="Enter rate"
          required
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
        />
        <input
          type="submit"
          value="Submit"
          class="w-full bg-red-500 text-white py-2 rounded-md hover:bg-red-600 transition duration-300"
        />
      </form>
    </main>
  </body>
</html>
